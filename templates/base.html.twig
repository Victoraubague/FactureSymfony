<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.1/css/font-awesome.min.css">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/body.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body class="light-theme dark-theme">
    <header>
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="header-inner d-flex justify-content-between align-items-center">
                    <a class="navbar-brand flex-shrink-0" href="#"><img src="https://yudiz.com/codepen/nft-store/logo-icon.svg" alt="logo-image" class="img-fluid">
                      Ludo Facture</a>
                    <div class="header-content d-flex align-items-center justify-content-end">
                        <form class="form-inline my-2 my-lg-0" method="get" action="{{ path('app_factures_index') }}">
                            <div class="search-icon position-relative">
                                <i class="fa fa-search position-absolute" aria-hidden="true" style="right: 10px; top: 50%; transform: translateY(-50%);"></i>
<input class="form-control mr-sm-2" type="search" name="client" placeholder="Chercher une facture" aria-label="Search" style="padding-right: 30px; width: 100%;">
                            </div>
                        </form>
                        <label class="switch flex-shrink-0 mb-0">
                            <input id="checkbox" type="checkbox">
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
                <button class="hamburger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </nav>
        </div>
    </header>


<div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="menu-links">
            <ul>
                <li class="nav-item active">
                    <a href="{{ path('app_home') }}" class="d-flex align-items-center nav-link"><i class="fa fa-home" aria-hidden="true"></i>
                        <span>Accueil</span></a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_form_controller_facture') }}" class="d-flex align-items-center nav-link"><i class="fa fa-briefcase" aria-hidden="true"></i>
                        <span>Facture</span></a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_factures_index') }}" class="d-flex align-items-center nav-link"><i class="fa fa-heart-o" aria-hidden="true"></i>
                        <span>Mettre à jour une facture</span></a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_confirmation') }}" class="d-flex align-items-center nav-link"><i class="fa fa-shopping-cart" aria-hidden="true"></i>
                        <span>Toutes les factures</span></a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_send_invoice') }}" class="d-flex align-items-center nav-link"><i class="fa fa-cog" aria-hidden="true"></i>
                        <span>Envoie de facture</span></a>
                </li>
                 <li class="nav-item">
                    <a href="{{ path('app_settings') }}" class="d-flex align-items-center nav-link"><i class="fa fa-cog" aria-hidden="true"></i>
                        <span>Réglages du compte</span></a>
                </li>
              
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById("menu-toggle").addEventListener('click', function(e) {
                e.preventDefault();
                document.getElementById("wrapper").classList.toggle("toggled");
            });
        });
    </script>
    {% block javascripts %}{% endblock %}
</body>
</html>